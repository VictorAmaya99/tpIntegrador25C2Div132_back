<%- include("partials/head.ejs") %>
<%- include("partials/nav.ejs") %>

<main>
    <h1>Crear producto</h1>
    
    <!-- A menos que enviemos este formulario con el envio nativo del formulario HTML, no necesitamos poner ni action ni method -->
    <form id="altaProducts-form" class="products-form-amplio">
        
        <label for="nombreProd">Nombre</label>
        <input type="text" name="nombre" id="nombreProd" required>
        <br>

        <label for="img_urlProd">Imagen</label>
        <input type="text" name="img_url" id="img_urlProd" required>
        <br>

        <label for="tipoProd">Tipo</label>
        <select name="tipo" id="tipoProd" required>
            <option value="femenino">Categoria 1</option>
            <option value="masculino">Categoria 2</option>
        </select>
        <br>

        <label for="precioProd">Precio</label>
        <input type="number" name="precio" id="precioProd" required>
        <br>

        <input type="submit" value="Crear producto">

    </form>

    <hr>
    <div id="contenedor-productos"></div>

    <hr>
    
    <!-- Formulario para crear usuarios y enviarlos a /api/users -->
     <h3>Alta usuarios</h3>
    <form id="altaUsers-container">
        <label for="nombreUser">Nombre</label>
        <input type="text" name="nombre" id="nombreUser" required>

        <label for="emailUser">Email</label>
        <input type="email" name="correo" id="emailUser" required>

        <label for="passwordUser">Password</label>
        <input type="password" name="password" id="passwordUser" required>

        <input type="submit" value="Crear usuario">
    </form>
</main>

<script src="js/crear.js"></script>

<%- include("partials/footer.ejs") %>
